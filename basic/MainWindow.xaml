<Window x:Class="basic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="PixelDepth" FontSize="48" Margin="0,0,0,503" />
        <StackPanel Orientation="Horizontal" Margin="0,66,0,0">
            <Image x:Name="ColorImageElement"/>
            <Image x:Name="DepthImageElement" Width="640" Height="480" MouseLeftButtonUp="DepthImageElement_MouseLeftButtonUp" />
            <Image x:Name="EnhancedDepthImage"  Width="640" Height="480" />
        </StackPanel>

    </Grid>
</Window>
